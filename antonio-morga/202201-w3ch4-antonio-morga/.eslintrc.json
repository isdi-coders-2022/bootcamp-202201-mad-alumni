{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:css-modules/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "class-methods-use-this": "off",
        "no-new": "off"
    },
    "plugins": ["css-modules"]
}
